
# ===== OpenVidu/LiveKit 로컬 환경 설정 =====
# 이 파일을 .env로 복사한 후 설정하세요: cp .env.example .env

# 본인 컴퓨터의 로컬 IP 주소를 입력하세요
# 터미널에서 확인: ifconfig | grep "inet " (192.168.x.x 형태)
LAN_PRIVATE_IP=여기에_본인_IP_입력

# HTTPS 사용 여부 (로컬 개발은 false)
USE_HTTPS=false

# LAN 모드 (false로 유지)
LAN_MODE=false

# LiveKit API 키와 시크릿 (개발용 기본값)
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# 대시보드 관리자 계정
DASHBOARD_ADMIN_USERNAME=admin
DASHBOARD_ADMIN_PASSWORD=admin

# Redis 비밀번호
REDIS_PASSWORD=redispassword

# Minio 설정
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# MongoDB 설정
MONGO_ADMIN_USERNAME=mongoadmin
MONGO_ADMIN_PASSWORD=mongoadmin

# OpenVidu Meet 설정
MEET_INITIAL_ADMIN_USER=admin
MEET_INITIAL_ADMIN_PASSWORD=admin
MEET_INITIAL_API_KEY=meet-api-key

# Apple Silicon Mac (M1/M2/M3) 사용 시 필수
EXPERIMENTAL_DOCKER_DESKTOP_FORCE_QEMU=1
